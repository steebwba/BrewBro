<form ng-submit="save()" name="frmNewGroup" ng-controlller="groupCreateController">
    <div class="modal-header">
        <h3 class="panel-title">Create New Group</h3>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="txtName">Name of Group</label>
            <input type="text" id="txtName" ng-value="Name" class="form-control" placeholder="Enter Group Name" ng-model="Group.Name" />
        </div>
        <div class="form-group">
            <label for="txtUsers">Users</label>
            <div class="input-group">
                <input type="text" id="txtUsers" class="form-control" placeholder="Enter Name" ng-model="Group.SearchText" />
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" ng-click="searchUsers()"><i class="fa fa-search"></i></button>
                </span>
            </div>
            <div class="control-group" ng-if="Group.UsersToSelect.length > 0">
                <div ng-repeat="user in Group.UsersToSelect" class="checkbox">
                    <checkbox ng-model="user.Selected"></checkbox>
                    {{user.Name}}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn btn-primary" value="Save" />
        <input type="button" class="btn btn-default" value="Close" ng-click="cancel()" />
    </div>
</form>