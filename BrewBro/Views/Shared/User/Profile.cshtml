<div class="jumbotron">
    <div class="container">
        <h1>{{User.Name}}</h1>
    </div>
</div>
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-group"></i>Groups</h3>
        </div>
        <ul ng-if="User.Groups.length > 0" class="list-group">
            <li ng-repeat="group in User.Groups" class="list-group-item">
                <div class="v-middle">
                    <span>{{group.Name}}</span><i ng-if="group.Owner.Id == User.Id" class="fa fa-star" title="You are the Owner of this Group"></i>
                </div>
                <div class="v-middle">
                    <div class="pull-right">
                        
                        <button class="btn btn-default" type="button" ng-click="removeFromGroup(group.Id)" title="Leave Group"><i class="fa fa-remove"></i></button>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>